<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msgs</var>
        </resource-bundle>       
    </application>
    <navigation-rule>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>equipment</to-view-id>
        </navigation-case>     
        <navigation-case>
            <from-outcome>addCalibration</from-outcome>
            <to-view-id>/device/addcalib.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>device</from-outcome>
            <to-view-id>/device/device.xhtml</to-view-id>
            <redirect include-view-params="true"/>
        </navigation-case>  
        <navigation-case>
            <from-outcome>calibration</from-outcome>
            <to-view-id>calibration.xhtml</to-view-id>
            <redirect include-view-params="true"/>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>index</to-view-id>
        </navigation-case>      
    </navigation-rule>
</faces-config>
